<div class="container">
  <h1>Add Donation for Auction</h1>
  <div class="row">
    <%= form_for @item do |f| %>
      <div class="input-field col s12">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="input-field col s12">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>
      <div class="input-field col s12">
        <%= f.label :retail_value %>
        <%= f.text_field :retail_value %>
      </div>
      <div class="input-field col s12">
        <%= f.label :business_name %>
        <%= f.text_field :business_name %>
      </div>
      <div class="input-field col s12">
        <%= f.label :contact_name %>
        <%= f.text_field :contact_name %>
      </div>
      <div class="input-field col s12">
        <%= f.label :address %>
        <%= f.text_field :address %>
      </div>
      <div class="input-field col s4">
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>
      <div class="input-field col s4">
        <%= f.label :state %>
        <%= f.text_field :state %>
      </div>
      <div class="input-field col s4">
        <%= f.label :zip %>
        <%= f.text_field :zip %>
      </div>
      <div class="input-field col s4">
        <%= f.label :phone %>
        <%= f.text_field :phone %>
      </div>
      <div class="input-field col s8">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class="input-field col s12">
        <%= f.select :delivery, options_for_select([['Delivery available', "1"], ['Pickup required', "0"]], selected: true), class:"browser-default" %>
        <% f.label :deliver %>
      </div>
      <div class="input-field col s12">
        <%= f.file_field :image  %>
      </div>
      <div class="col s12">
        <%= f.submit "Add Donation", class:"btn donation-form" %>
      </div>
    <% end %>
  </div>
</div>

