<span>
  <div class="right">
    <% if admin? && params[:controller] != "users" %>
      <%= render partial: "shared/admin_item_card_edit", locals: {item: item} %>
  </div>
    <% else %>
      <%= link_to edit_item_path(item) do %>
        <i class="material-icons right">mode_edit</i>
      <% end %>
  </div>
  <% if deletable(item) %>
    <div class="right"><%= link_to item_path(item, archive: true), method: :put,
      data: {confirm: "Are you sure you want to delete this?"} do %>
      <i class="material-icons right">delete</i>
    <% end %>
    </div>
  <% end %>
    <% end %>
</span>
